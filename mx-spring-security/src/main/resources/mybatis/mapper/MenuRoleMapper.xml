<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mx.spring.security.mapper.IMenuRoleMapper">

    <resultMap id="BaseResultMap" type="com.mx.spring.security.model.MenuRole">
         <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="menuId" column="menu_id" jdbcType="VARCHAR"/>
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="createUser" column="create_user" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, menu_id, role_id, create_user, create_time
    </sql>

    <select id="findAll" resultType="com.mx.spring.security.vo.MenuRoleVO" parameterType="java.lang.String">
        select mr.id,mr.create_time,r.name from mx_menu_role mr
        inner join mx_role r on mr.role_id = r.id
        where mr.menu_id = #{menuId}
        <if test="name!=null and name!=''">
            and r.name like concat('%',#{name},'%')
        </if>
        ORDER BY mr.create_time DESC
    </select>


</mapper>