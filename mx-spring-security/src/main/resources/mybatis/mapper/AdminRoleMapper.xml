<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mx.spring.security.mapper.IAdminRoleMapper">

    <resultMap id="BaseResultMap" type="com.mx.spring.security.model.AdminRole">
         <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="adminId" column="admin_id" jdbcType="VARCHAR"/>
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="createUser" column="create_user" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="BIGINT"/>
        <result property="lastModifyUser" column="last_modify_user" jdbcType="VARCHAR"/>
        <result property="lastModifyTime" column="last_modify_time" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, admin_id, role_id, create_user, create_time, last_modify_user, last_modify_time
    </sql>

    <select id="roleList" resultType="com.mx.spring.security.vo.AdminRoleVO" parameterType="java.lang.String">
        SELECT ar.id, ar.admin_id, ar.role_id, ar.create_time, r.name role_name
        FROM mx_admin_role ar
        INNER JOIN mx_role r ON ar.role_id = r.id
        WHERE ar.admin_id = #{adminId}
    </select>

    <select id="permissionList" resultType="com.mx.spring.security.vo.AdminPermissionVO"
            parameterType="java.lang.String">
        SELECT p.id permission_id, p.permission_code, p.permission_name, ar.admin_id
        FROM mx_role_permission rp
        INNER JOIN mx_permission p ON rp.permisson_id = p.id
        INNER JOIN mx_admin_role ar ON ar.role_id = rp.role_id
        WHERE ar.admin_id = #{adminId}
    </select>


</mapper>