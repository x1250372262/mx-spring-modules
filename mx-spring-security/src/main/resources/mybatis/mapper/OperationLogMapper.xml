<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mx.spring.security.mapper.IOperationLogMapper">

    <resultMap id="BaseResultMap" type="com.mx.spring.security.model.OperationLog">
         <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="typeName" column="type_name" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="BIGINT"/>
        <result property="requestUrl" column="request_url" jdbcType="VARCHAR"/>
        <result property="requestParam" column="request_param" jdbcType="LONGVARCHAR"/>
        <result property="returnCode" column="return_code" jdbcType="VARCHAR"/>
        <result property="returnMessage" column="return_message" jdbcType="LONGVARCHAR"/>
        <result property="returnResult" column="return_result" jdbcType="LONGVARCHAR"/>
        <result property="className" column="class_name" jdbcType="VARCHAR"/>
        <result property="methodName" column="method_name" jdbcType="VARCHAR"/>
        <result property="ip" column="ip" jdbcType="VARCHAR"/>
        <result property="location" column="location" jdbcType="VARCHAR"/>
        <result property="os" column="os" jdbcType="VARCHAR"/>
        <result property="browser" column="browser" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, title, type, type_name, user_id, user_name, create_time, request_url, request_param, return_code, return_message, return_result, class_name, method_name, ip, location, os, browser
    </sql>

    <select id="findAll" resultType="com.mx.spring.security.vo.LogVO">
        SELECT id, title,type_name, user_name, create_time, request_url,ip, location
        FROM mx_operation_log
        <where>
            <if test="title != null and title != ''">
                AND title=#{title}
            </if>
            <if test="startTime != null">
                AND create_time <![CDATA[>=]]> #{startTime}
            </if>
            <if test="endTime != null">
                AND create_time <![CDATA[<=]]> #{endTime}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>


</mapper>