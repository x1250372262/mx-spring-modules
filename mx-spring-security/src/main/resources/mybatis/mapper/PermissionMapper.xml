<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mx.spring.security.mapper.IPermissionMapper">

    <resultMap id="BaseResultMap" type="com.mx.spring.security.model.Permission">
         <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="groupName" column="group_name" jdbcType="VARCHAR"/>
        <result property="permissionName" column="permission_name" jdbcType="VARCHAR"/>
        <result property="permissionCode" column="permission_code" jdbcType="VARCHAR"/>
        <result property="createUser" column="create_user" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="BIGINT"/>
        <result property="lastModifyUser" column="last_modify_user" jdbcType="VARCHAR"/>
        <result property="lastModifyTime" column="last_modify_time" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, group_name, permission_name, permission_code, create_user, create_time, last_modify_user, last_modify_time
    </sql>

    <select id="findAll" resultType="com.mx.spring.security.vo.RoleListVO" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from mx_role
        <if test="name!=null and name!=''">
            where name like concat('%',#{name},'%')
        </if>
        ORDER BY create_time DESC
    </select>

</mapper>